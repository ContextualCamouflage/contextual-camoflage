body {
  @extend .grey, .darken-4;
  padding: 2em;
  font-family: 'Avenir', sans-serif;
  font-size: 16px;
  background: url(<%= asset_path 'cc-background.jpg'%>);
  background-repeat: repeat;

  p, span, div {
    color: #f8ffff;
  }

  h1,h2,h3,h4,h5,h6 {
    color: #f8ffff;
  }

  h1 {
    font-size: 2.5em;
  }
  h2 {
    font-family: 'Avenir Next';
    font-size: 1.8em;
    font-weight: 100;
  }
  h3 {
    font-size: 1.5em;
  }

  h1.header {
    color: #f8ffff;
    font-family: "Avenir Next", sans-serif;
    font-weight: 100;
    font-size: 1.2em;
    margin: 0;
    line-height: 2em;

    .bold {
      font-weight: 500;
    }
  }

}
